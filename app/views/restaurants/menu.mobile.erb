<div data-role="page">

  <div data-role="header" data-theme="b">
    <div id="headerBlock">   <%= params[:id] %> </div>

   <a href="<%=url_for(:back) %>" data-mini="true" data-role="button" data-icon="back" > Back</a>
    <a href="<%=url_for(:action => 'show', :controller => 'restaurants',:format=>'mobile') %>" data-mini="true" data-role="button" data-icon="home" > Home</a>



  </div><!-- /header -->

  <div data-role="navbar" data-iconpos="left">
    <ul>

      <li><a href="#" >Breakfast</a>  </li>
      <li><a href="#" >Lunch</a> </li>
      <li><a href="#" class="ui-btn-active">Dinner</a> </li>
      <li><a href="#" >Featured</a> </li>

    </ul>
  </div><!-- /navbar -->

  <div data-role="collapsible-set" data-theme="b" >

    <div data-role="collapsible" data-collapsed="false">
      <h3>Appetizers</h3>
      <p>I'm the collapsible set content for section 1.</p>






    </div>

    <div data-role="collapsible">
      <h3>Salads</h3>

      <%  @restMenu=@restaurant.menu.menu_sections.where("name= ? ","Salads") %>
      <% @restMenu.each do | rest| %>

          <% @mesusec=MenuItemsMenuSections.find_all_by_menu_section_id(rest.id) %>

          <% @mesusec.each do | h | %>

                    <%#= MenuItem.find(h.menu_item_id).name %>
                    <% @item=MenuItem.where("id= ? AND Meals= ? ",h.menu_item_id,"Dinner") %>

                    <% @item.each do | item |  %>
                        <p>
                            <%= item.name %>
                        </p>
                    <% end %>



          <% end %>
      <%end %>
    </div>

    <div data-role="collapsible">
      <h3>Sandwiches</h3>
      <p>I'm the collapsible set content for section 2.</p>
    </div>
    <div data-role="collapsible">
      <h3>Entrees</h3>
      <p>I'm the collapsible set content for section 2.</p>
    </div>
    <div data-role="collapsible">
      <h3>Desserts</h3>
      <p>I'm the collapsible set content for section 2.</p>
    </div>

  </div>




  <div data-role="content">




  </div><!-- /content -->

  <div data-role="footer" data-theme="b">
    <div data-role="navbar" data-iconpos="left">
      <ul>

        <li><a href="<%= url_for(menu_restaurant_path) %>" class="ui-btn-active">Menu</a>  </li>
        <li><a href="<%= url_for(contact_restaurant_path) %>" >Contact</a> </li>
        <li><a href="<%= url_for(getApp_restaurant_path) %>" >Get App</a> </li>

      </ul>
    </div><!-- /navbar -->
  </div><!-- /footer -->
</div><!-- /page -->